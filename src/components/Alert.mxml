<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark"
						   skinClass="skins.AlertSkin"
						   
						   >
	
	<fx:Metadata>
		[Event(name="closed", type="flash.events.Event")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var message:String = "";
			
			protected function button1_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new Event("closed"));
				this.close()
				
			}
			
		]]>
	</fx:Script>
	
	
	
	<s:VGroup horizontalAlign="center" horizontalCenter="0" paddingBottom="8" paddingLeft="8"
			  paddingRight="8" paddingTop="8" verticalCenter="0">
		<s:Label id="messageText" text="{message}" horizontalCenter="0" textAlign="center" width="200"/>
		<s:Button label="" horizontalCenter="0" click="button1_clickHandler(event)" skinClass="skins.OkButtonSkin" />
	</s:VGroup>
</s:SkinnablePopUpContainer>
