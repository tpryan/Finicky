<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%" height="199" creationComplete="init(event)" xmlns:components="components.*" >
	
	<fx:Metadata>
		[Event(name="clickLeft", type="flash.events.Event")]
		[Event(name="clickRight", type="flash.events.Event")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.core.UIComponent;
			import mx.events.FlexEvent;
			
			[Bindable]
			public var visibleLeft:Boolean = true;
			
			[Bindable]
			public var visibleRight:Boolean = true;
			
			
			import spark.components.supportClasses.StyleableTextField;
			
			[Bindable]
			private var _currentItem:String = "";
			

			public function get currentItem():String
			{
				return _currentItem;
			}

			public function set currentItem(value:String):void
			{
				_currentItem = value;
			}

			protected function init(event:FlexEvent):void
			{
				
			}
			
			
			protected function leftBtn_clickHandler(event:MouseEvent):void
			{
				dispatchEvent( new Event("clickLeft"));
				
			}
			
			protected function rightBtn_clickHandler(event:MouseEvent):void
			{
				dispatchEvent( new Event("clickRight"));
				
			}
			
			
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:Image id="banner" y="0" horizontalCenter="-0" source="@Embed('/assets/bg/detailBanner.png')"/>
	<s:Button id="leftBtn" visible="{visibleLeft}" horizontalCenter="-220" y="27" skinClass="skins.BannerButtonSkin" click="leftBtn_clickHandler(event)" />
	<s:Button id="rightBtn" visible="{visibleRight}" horizontalCenter="220" y="27" skinClass="skins.BannerButtonSkin" click="rightBtn_clickHandler(event)" />
	
	
	
	<s:Label id="itemLabel" horizontalCenter="0"  text="{_currentItem}" width="380"
			 textAlign="center" verticalAlign="middle" verticalCenter="24"/>
</s:Group>
