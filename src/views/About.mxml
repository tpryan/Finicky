<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" actionBarVisible="{data.softControls}" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="About">
	
	<fx:Script>
		<![CDATA[
			protected function emailButton_clickHandler(event:MouseEvent):void
			{
				var urlString:String = "mailto:";
				urlString += "finickyapp@terrenceryan.com";
				urlString += "?subject=";
				urlString += "Contact from Finicky app";
				navigateToURL(new URLRequest(urlString));
				
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	<s:BitmapImage id="logo" source="@Embed('/assets/icons/aboutLogo.png')" horizontalCenter="0" y="20" depth="0"  />
	
	<s:Label id="labelDev" horizontalCenter="0" y="350" text="Development" />
	<s:Label id="textDev" horizontalCenter="0" y="380" text="Terry Ryan"/>
	
	<s:Label id="labelDes" horizontalCenter="0" y="450" text="Design"/>
	<s:Label id="textDes" horizontalCenter="0" y="480" text="The1stMovement"/>
	
	<s:Label id="labelThanks" horizontalCenter="0" y="550" text="Special Thanks"/>
	<s:Label id="textThanks" horizontalCenter="0" y="580" text="Adobe, ESRI"/>
	
	<s:Button id="emailButton"  horizontalCenter="0" y="650" label="CONTACT" click="emailButton_clickHandler(event)"  />
	
	<s:navigationContent>
		<s:Button id="backBtn" label="Back" click="navigator.popView()" />
	</s:navigationContent>
	
</s:View>
