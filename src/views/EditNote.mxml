<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" actionBarVisible="false" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="EditNote" keyDown="keyPress(event)">
	
	<fx:Script>
		<![CDATA[
			import spark.transitions.SlideViewTransition;
			
			
			[Bindable]
			[Embed(source="/assets/bg/noteTop.png")]
			private var noteTop:Class;
			
			[Bindable]
			[Embed(source="/assets/bg/noteBottom.png")]
			private var noteBottom:Class;
			
			
			protected function keyPress(event:KeyboardEvent):void
			{
				trace(event.keyCode);
				
				
				if (event.keyCode == Keyboard.BACK){
					
					event.preventDefault();
					var trans:SlideViewTransition = new SlideViewTransition();
					trans.direction = "down";
					navigator.popView(trans);
				}
				
				
				
			}
		]]>
	</fx:Script>
	
	<s:Image id="topBounds" top="0" width="100%" blendMode="multiply" cacheAsBitmap="true"
			 source="@Embed('/assets/bg/noteTop.png')"/>
	<s:Image id="bottomBounds" bottom="0" width="100%" blendMode="multiply" cacheAsBitmap="true"
			 source="@Embed('/assets/bg/noteBottom.png')"/>
	<s:TextArea focusThickness="0" left="25" right="24" top="36" bottom="46" skinClass="skins.NoteSkin"/>
	
	
	
	
	
	
</s:View>
