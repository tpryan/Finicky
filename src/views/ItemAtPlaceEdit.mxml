<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"  actionBarVisible="{data.softControls}" creationComplete="init(event)"
		xmlns:s="library://ns.adobe.com/flex/spark" title="Delete Match" xmlns:components="components.*">
	<fx:Script>
		<![CDATA[
			import com.terrenceryan.finicky.db.DBManager;
			import com.terrenceryan.finicky.vo.ItemAtPlace;
			
			import mx.events.FlexEvent;
			[Bindable]
			protected var itemAtPlace:ItemAtPlace;
			protected var dbManager:DBManager;
			
			protected function init(event:FlexEvent):void
			{
				itemAtPlace = data.itemAtPlace;	
				dbManager = data.dbManager;
			}
			
			protected function deleteButton_clickHandler(event:Event):void
			{
				accept.addEventListener("ok", handleDelete);
				accept.message = "Are you sure you want to delete?"
				accept.open(this,false);
				
			}
			
			protected function handleDelete(event:Event):void
			{
				dbManager.itemAtPlaceDAO.destroy(itemAtPlace);
				navigator.popView();
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<components:AcceptPopUp id="accept" top="0" right="0" bottom="0" left="0" />
	</fx:Declarations>
	
	
	<s:VGroup top="5" left="5" right="5" bottom="50">
		<s:Label id="titleLabel" horizontalCenter="0" text="Delete Match" visible="{!data.softControls}"/>
		<s:Label width="100%" styleName="userInputtedInfo" text="{itemAtPlace.item.name}" />
		<s:Label width="100%" styleName="appProvidedText" text="at" textAlign="left"/>
		<s:Label id="storeName" width="100%" horizontalCenter="0" text="{itemAtPlace.place.name}"/>
		<s:Label id="storeAddress"  width="440" horizontalCenter="0" text="{itemAtPlace.place.address}"/>
		<s:Label id="storeCityStateZip"  width="440" horizontalCenter="0" text="{itemAtPlace.place.toCityStateZipString()}"/>
	</s:VGroup>
	
	<s:Button id="deleteBtnIOS" visible="{data.softControls}" styleName="iosDelete" label="Delete" click="deleteButton_clickHandler(event)" bottom="5" /> 
			  
	
	<components:TabMenu id="tabMenu" active="true" bottom="0" leftButtonText="SAVE" rightButtonText="DELETE"
						visible="{!data.softControls}"
						leftClick="navigator.popView()" 
						rightClick="deleteButton_clickHandler(event)" />
	
	<s:viewMenuItems>
		<s:ViewMenuItem id="deleteButton" label="DELETE" click="deleteButton_clickHandler(event)" />
		<s:ViewMenuItem id="saveButton" label=" "  />
		
	</s:viewMenuItems>
	
	<s:navigationContent>
		<s:Button id="backBtn" label="Back" click="navigator.popView()" />
	</s:navigationContent>
	
</s:View>
